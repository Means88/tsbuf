{
  "name": "tsbuf",
  "version": "0.2.1",
  "description": "Generate TypeScript enum and interface with proto buffer.",
  "main": "dist/index.js",
  "bin": "tsbuf",
  "scripts": {
    "build": "rimraf dist && gulp build copy",
    "lint": "run-s lint:prettier lint:tslint",
    "lint:prettier": "prettier-check '{src,test}/**/*.ts'",
    "lint:tslint": "tslint -t stylish -p .",
    "fix": "run-s fix:tslint fix:prettier",
    "fix:prettier": "prettier --write '{src,test}/**/*.ts'",
    "fix:tslint": "tslint --fix -t stylish -p .",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "test:ci": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.test.ts": [
      "yarn prettier --write",
      "git add"
    ],
    "*.ts": [
      "yarn fix:tslint",
      "yarn prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Means88/tsbuf.git"
  },
  "keywords": [
    "protobuf",
    "parser",
    "typescript"
  ],
  "author": "Means88",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Means88/tsbuf/issues"
  },
  "homepage": "https://github.com/Means88/tsbuf#readme",
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/jest": "^28.1.7",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.12.0",
    "@types/pegjs": "^0.10.1",
    "@types/prettier": "^1.13.2",
    "@types/sinon": "^5.0.5",
    "chai": "^4.2.0",
    "gulp": "4.0.2",
    "gulp-typescript": "^5.0.0-alpha.3",
    "husky": "^1.2.0",
    "jest": "^28.1.3",
    "lint-staged": "^8.1.0",
    "ncp": "^2.0.0",
    "np": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.0",
    "ts-jest": "^28.0.8",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "execute-me": "^0.2.0",
    "file": "^0.2.2",
    "mkdirp": "^0.5.1",
    "pegjs": "^0.10.0",
    "prettier": "^1.15.2"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "tsbuf"
  ]
}
